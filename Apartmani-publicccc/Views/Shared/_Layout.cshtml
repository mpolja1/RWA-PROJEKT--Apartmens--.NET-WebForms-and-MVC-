<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img src="https://thumbs.dreamstime.com/b/building-apartments-logo-124916842.jpg" alt="A" width="50" style="padding-bottom:10px" height="40">
                </a>


                <a class="navbar-brand" href="#">Rwa Apartments</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Search", "Index", controllerName: "Apartment")</li>
                    <li>@Html.ActionLink("Contact", "Contact", controllerName: "Home")</li>
                    <li>@Html.ActionLink("About Us", "About", controllerName: "Home")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["username"] != null)
                    {
                        <li>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Language
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    <ul>
                                        <li>@Html.ActionLink("English","Change","Account")</li>
                                        <li>@Html.ActionLink("Croatian","Change","Account")</li>
                                    </ul>
                                </div>
                            </div>
                        </li>

                        <li style="padding:5px">@Session["username"]</li>
                        <li>
                            <button class="btn btn-danger"> @Html.ActionLink("Logout", actionName: "Logout", controllerName: "Account")</button>
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Log in", "LogIn", controllerName: "Account")</li>
                        <li>@Html.ActionLink("Registration", "Registration", controllerName: "Account")</li>
                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom text-center ">
            <p class="text-white">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
